#ifndef PARAMETER_H_
#define PARAMETER_H_
typedef enum {
	PARA_IN, PARA_OUT
} ParaType;

namespace gaea {

class Parameter {
public:
	Parameter(int typeId, char *simpleName, void *value, ParaType paraType = PARA_IN);
	virtual ~Parameter();
	ParaType getParaType() const;
	char *getSimpleName() const;
	void *getValue() const;
	int getTypeId() const;
private:
	int typeId;
	char *simpleName;
	void *value;
	ParaType paraType;
};

}

#endif /* PARAMETER_H_ */
